{
    "name": "Prettier Lichess",
    "version": "0.1.1",
    "manifest_version": 2,
    "description": "Lichess, but prettier.",
    "icons": {
        "128": "icon_128.png"
    },
    "content_scripts": [{
        "matches": ["*://lichess.org/*"],
        "css": ["styles.css"],
        "js": ["content.js"]
    }],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "storage", "declarativeContent"],
    "background": {
        "scripts": ["background.js"],
        "persistant": false
    }
}